{
  "name": "question-practice-desktop",
  "version": "1.0.0",
  "description": "题境随行-单机精简版 Windows桌面应用",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "install:all": "npm install && cd renderer && npm install",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "node server/index.js",
    "client": "cd renderer && npm run serve"
  },
  "build": {
    "appId": "com.questscape.question-practice",
    "productName": "题境随行",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "resources/icon.ico"
    },
    "files": [
      "**/*",
      "!dist/*",
      "!node_modules/*",
      "!renderer/*"
    ],
    "extraResources": {
      "from": "renderer/dist",
      "to": "renderer"
    }
  },
  "keywords": [
    "electron",
    "vue",
    "element-plus",
    "education",
    "quiz"
  ],
  "author": "Questscape",
  "license": "MIT",
  "dependencies": {
    "buffer": "^6.0.3",
    "cors": "^2.8.5",
    "electron-is-dev": "^2.0.0",
    "express": "^4.18.2",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
